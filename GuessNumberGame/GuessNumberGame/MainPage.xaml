<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GuessNumberGame"
             x:Class="GuessNumberGame.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Image x:Name="ImgGuessNumber" Source="guessnumber.png" VerticalOptions="StartAndExpand"/>
        <Image x:Name="ImgPlayButton" Source="play.png" VerticalOptions="End">
            <Image.GestureRecognizers>
                <TapGestureRecognizer x:Name="PlayButton" NumberOfTapsRequired="1" Tapped="PlayButton_OnTapped"/>
            </Image.GestureRecognizers>
        </Image>
    </StackLayout>

</ContentPage>
